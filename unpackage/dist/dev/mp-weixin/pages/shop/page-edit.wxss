.container .panel {
  background-color: #ffffff;
  border-radius: 20rpx;
  margin: 0 30rpx;
  margin-bottom: 30rpx;
  padding: 10rpx;
  position: relative;
}
.container .panel .title {
  width: 150rpx;
}
.container .panel .item {
  right: 40rpx;
  padding: 13rpx 26rpx;
  color: #7E7E7E;
  font-size: 28rpx;
  border: 0px;
}
.container .panel .value {
  position: relative;
  float: right;
  padding: 10rpx 26rpx;
}
.container .footer {
  position: fixed;
  background-color: #ffffff;
  height: 150rpx;
  width: 750rpx;
  bottom: 0px;
  z-index: 200;
}
.container .footer .btn {
  padding-top: 30rpx;
  margin-right: 40rpx;
  text-align: right;
}
.container .footer .btn button {
  width: 180rpx;
  height: 76rpx;
  font-size: 30rpx;
}
.container .footer .btn button:after {
  border: none;
}
.container .footer .btn button:active {
  opacity: 0.5;
}
.container .footer .btn .cancel {
  display: inline-block;
  margin-right: 20rpx;
  color: #FF6146;
  background: #F2F2F2;
}
.container .footer .btn .submit {
  display: inline-block;
  margin-left: 20rpx;
  background: #FF6146;
  color: #ffffff;
}
.item-icon {
  position: absolute;
  right: 20rpx;
  margin-top: 5rpx;
  color: #7E7E7E;
  font-size: 39rpx;
}
.v-action {
  position: relative;
  float: left;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
}
.zx-color-picker__text {
  border: 1px solid #bbb;
  border-radius: 2px;
  display: inline-block;
  outline: none;
  padding: 5px;
  -webkit-transition: border-color .25s;
  transition: border-color .25s;
  background-color: #fff;
  position: relative;
}
.zx-color-picker__preview {
  width: 64px;
  height: 22px;
}
.tag-view {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  margin-right: 10rpx;
  margin-left: 20rpx;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
}

