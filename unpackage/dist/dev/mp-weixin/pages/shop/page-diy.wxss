
.icon-item {

	display: -webkit-box;
	display: -webkit-flex;
	display: flex;
	box-sizing: border-box;

	width: 140px;
	padding: 30rpx 10rpx;
	text-align: center;
	-webkit-box-orient: vertical;
	-webkit-box-direction: normal;
	-webkit-flex-direction: column;
	        flex-direction: column;
	position: absolute;
	top: 50%;
	left: 50%;
	-webkit-transform: translate(-50%, -50%);
	        transform: translate(-50%, -50%);
}
.icon-item-text {
	font-size: 18px;
	text-align: center;
	color: #8f8f94;
}

